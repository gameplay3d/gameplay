form basicControls
{
    theme = res/common/default.theme
    layout = LAYOUT_ABSOLUTE
    style = basic
    size = 600, 600
    scroll = SCROLL_BOTH
    
    label title
    {
        style = underlined
        position = 185, 0
        size = 200, 50
        text = This is a label.
    }

    button testButton
    {
        style = buttonStyle
        position = 50, 80
        size = 200, 100
        text = This is a button.
    }

    checkbox testCheckbox
    {
        style = iconNoBorder
        position = 50, 220
        size = 200, 40
        text = This is a checkbox.
    }

    slider testSlider
    {
        style = topLeftNoBorder
        position = 55, 315
        size = 190, 60
        orientation = HORIZONTAL
        min = -100
        max = 100
        value = 0
        text = This is a slider.
        valueTextVisible = true
    }

    label textBoxLabel
    {
        style = iconNoBorder
        position = 55, 400
        size = 200, 60
        text = Label:
    }

    textBox testTextBox
    {
        style = topLeftAlignedEntry
        position = 50, 450
        size = 480, 80
        text = This is a text box.
    }

    radioButton choice1
    {
        style = iconNoBorder
        text = Radio button 1.
        group = testRadio
        position = 350, 80
        size = 180, 40
        selected = true
    }

    radioButton choice2 : choice1
    {
        text = Radio button 2.
        position = 350, 130
        selected = false
    }

    radioButton choice3 : choice2
    {
        text = Radio button 3.
        position = 350, 180
    }
}