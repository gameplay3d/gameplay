form particleEd
{
    theme = res/editor.theme
    style = background
    size = 1024, 600

    // Diagnostics
    // ===========

    // Number of currently alive particles
    label liveParticlesCount
    {
        style = iconNoBorder
        position = 400, 550
        size = 200, 25
        text = Particles: 0
    }

    // FPS
    label FPS : liveParticlesCount
    {
        position = 400, 575
        text = FPS: 0
    }

    // Camera Zoom
    button zoomIn
    {
        style = buttonStyle
        position = 0, 500
        size = 100, 50
        text = Zoom In
    }

    button zoomOut : zoomIn
    {
        position = 0, 550
        text = Zoom Out
    }

    // Presets
    // =======

    // Switch between emitters.
    // Radio-group for now.
    // TODO: Dropdown menu!
    container presets
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 0, 0
        size = 160, 200

        label title
        {
            style = title
            size = 140, 30
            text = Presets
        }

        radioButton spiralFlame
        {
           style = iconNoBorder
           text = Fire
           group = presets
           size = 140, 50
           selected = true
        }

        radioButton smoke : spiralFlame
        {
            text = Smoke
            selected = false
        }

        radioButton explosion : smoke
        {
            text = Explosion
        }
    }


    // Emitter settings
    // ================

    // Emission settings
    container emission
    {
        style = basic
        position = 0, 200
        layout = LAYOUT_VERTICAL
        size = 160, 220

        // Burst emission
        button emit
        {
            style = buttonStyle
            position = 0, 50
            size = 140, 50
            text = Emit
        }

        // Emission rate
        slider emissionRate
        {
            style = noBorder
            size = 140, 50
            orientation = HORIZONTAL
            min = 1
            max = 500
            value = 100
            step = 0
            text = Emission Rate
        }

        slider burstSize : emissionRate
        {
            text = Burst Size
            value = 20
            max = 50
            step = 1
        }

        // Start / Stop Emitter
        checkBox started
        {
            style = iconNoBorder
            size = 140, 50
            text = Running
            checked = true
        }
    }

    container particleProperties
    {
        style = basic
        layout = LAYOUT_VERTICAL
        position = 854, 0
        size = 170, 380

        // Particle Size
        label titleSize
        {
            style = title
            size = 150, 30
            text = Size
        }

        slider startMin
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0
            max = 5
            value = 1.5
            step = 0
            text = Min. Begin Size
        }

        slider startMax : startMin
        {
            text = Max. Begin Size
        }

        slider endMin : startMin
        {
            text = Min. End Size
        }

        slider endMax : startMin
        {
            text = Max. End Size
        }

        // Energy
        label titleEnergy
        {
            style = title
            size = 150, 30
            text = Energy
        }

        slider energyMin
        {
            style = noBorder
            size = 150, 50
            orientation = HORIZONTAL
            min = 0
            max = 10000
            text = Min. Energy
        }

        slider energyMax : energyMin
        {
            text = Max. Energy
        }
    }
}